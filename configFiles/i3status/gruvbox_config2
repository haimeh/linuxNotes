
# github.com/rafi i3status config

# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#65991a"
        color_bad = "#cc241d"
        color_degraded = "#fabd2f"
        interval = 2
}

order += "wireless wlp70s0"
order += "ethernet enp69s0"
order += "battery 1"
order += "volume master"
order += "load"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "disk /home/"
order += "tztime local"

volume master {
        #format = "â™ª%volume" 
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        # termsyn font
        format = "ðŸ”Š %volume"
}

load {
#       format = " Î”: %1min "
        # termsyn font
        format = "%1min"
}

cpu_usage {
        format = "%usage CPU"
}

memory {
        format = "%used RAM"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%avail :/"
}

disk "/home/" {
        format = "%avail :/home/"
}

wireless wlp70s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W "
}

ethernet enp69s0 {
        # termsyn font
        format_up =  "%ip"
        format_down = "eth0 "
}

tztime local {
        # termsyn font
        format = "%h-%d %H:%M"
}

battery 1 {
        format = "%status %percentage %remaining %emptytime"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

